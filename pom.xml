<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codelibs.maven</groupId>
  <artifactId>yuicompressor-maven-plugin</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>maven-plugin</packaging>

  <name>YUI Compressor Maven Plugin</name>
  <description>
    Maven plugin to compress (minify and obfuscate) JavaScript and CSS files
    using YUI Compressor, and validate JavaScript files with JSLint.
    Forked from net.alchim31.maven:yuicompressor-maven-plugin for continued development.
  </description>
  <url>https://github.com/codelibs/${project.artifactId}</url>
  <inceptionYear>2012</inceptionYear>

  <organization>
    <name>CodeLibs Project</name>
    <url>https://www.codelibs.org/</url>
  </organization>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:codelibs/${project.artifactId}.git</connection>
    <developerConnection>scm:git:git@github.com:codelibs/${project.artifactId}.git</developerConnection>
    <url>https://github.com/codelibs/${project.artifactId}</url>
    <tag>HEAD</tag>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/codelibs/${project.artifactId}/issues</url>
  </issueManagement>

  <developers>
    <developer>
      <id>shinsuke</id>
      <name>Shinsuke Sugaya</name>
      <email>shinsuke@yahoo.co.jp</email>
      <organization>CodeLibs Inc.</organization>
      <organizationUrl>https://www.codelibs.org/</organizationUrl>
      <timezone>+9</timezone>
    </developer>
  </developers>

